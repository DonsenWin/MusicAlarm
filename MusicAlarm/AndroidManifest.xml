<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.fedom.android.musicalarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <permission android:name="jp.fedom.android.musicalarm.LOCAL" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="jp.fedom.android.musicalarm.LOCAL" />

    <application
        android:name="jp.fedom.android.musicalarm.MusicAlarm"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.fedom.android.musicalarm.activity.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="jp.fedom.android.musicalarm.service.AlarmRegisterService"
            android:permission="jp.fedom.android.musicalarm.LOCAL" />
        <service
            android:name="jp.fedom.android.musicalarm.service.AlarmRingService"
            android:permission="jp.fedom.android.musicalarm.LOCAL" />
        
        <receiver
            android:name="jp.fedom.android.musicalarm.broadcastreceiver.BootLoaderBroadcastReceiver"
            android:enabled="true"
            android:permission="jp.fedom.android.musicalarm.LOCAL" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>